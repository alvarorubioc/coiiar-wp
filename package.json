{
  "name": "coiiar",
  "version": "1.0.0",
  "description": "Wordpress theme for COIIAR, based on starter theme underscores.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alvarorubioc/coiiar-wp.git"
  },
  "keywords": [
    "WordPress",
    "theme",
    "engineering"
  ],
  "author": "Alvaro Rubioc",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alvarorubioc/coiiar-wp/issues"
  },
  "homepage": "https://github.com/alvarorubioc/coiiar-wp#readme",
  "devDependencies": {
    "@wordpress/scripts": "^19.2.2",
    "dir-archiver": "^1.1.1",
    "node-sass": "^7.0.1",
    "rtlcss": "^3.5.0",
    "browser-sync": "^2.27.7"
  },
  "scripts": {
    "watch": "node-sass dev/sass/ -o ./ --source-map true --output-style compressed --indent-type tab --indent-width 1 -w",
    "compile:css": "node-sass dev/sass/ -o ./ && stylelint '*.css' --fix || true && stylelint '*.css' --fix",
    "lint:scss": "wp-scripts lint-style 'dev/sass/**/*.scss'",
    "lint:js": "wp-scripts lint-js 'assets/js/*.js'",
    "bundle": "dir-archiver --src . --dest ../dist/coiiar.zip --exclude .DS_Store .stylelintrc.json .eslintrc .git .gitattributes .github .gitignore README.md composer.json composer.lock node_modules vendor package-lock.json package.json .travis.yml phpcs.xml.dist dev style.css.map yarn.lock",
    "sync": "browser-sync start --proxy 'http://localhost:8888/coiiar/' --files '*.*'",
    "dev": "npm run watch & npm run sync"
  },

  "dependencies": {
    "browser-sync": "^2.27.7"
  }
}
